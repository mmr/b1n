<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>b1n.framework</groupId>
  <artifactId>b1n-framework-eclipse</artifactId>
  <version>1.0.1</version>
  <name>b1n-framework-eclipse</name>
  <url>http://b1n.org</url>

  <dependencies>
    <dependency>
      <groupId>b1n.framework</groupId>
      <artifactId>b1n-base</artifactId>
      <version>1.0.1</version>
    </dependency>
    <dependency>
      <groupId>b1n.framework</groupId>
      <artifactId>b1n-persistence</artifactId>
      <version>1.0.1</version>
    </dependency>
    <dependency>
      <groupId>b1n.framework.game</groupId>
      <artifactId>b1n-game-core</artifactId>
      <version>1.0.1</version>
    </dependency>
    <dependency>
      <groupId>b1n.framework.game</groupId>
      <artifactId>b1n-game-net</artifactId>
      <version>1.0.1</version>
    </dependency>
    <dependency>
      <groupId>hsqldb</groupId>
      <artifactId>hsqldb</artifactId>
      <version>1.8.0.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.2</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <defaultGoal>eclipse:eclipse</defaultGoal>

    <!-- Resources -->
    <resources>
      <resource>
        <directory>base/src/main/resources</directory>
      </resource>
      <resource>
        <directory>persistence/src/main/resources</directory>
      </resource>
      <resource>
        <directory>game/game-core/src/main/resources</directory>
      </resource>
      <resource>
        <directory>game/game-net/src/main/resources</directory>
      </resource>
    </resources>

    <!-- Test Resources -->
    <testResources>
      <testResource>
        <directory>base/src/test/resources</directory>
      </testResource>
      <testResource>
        <directory>persistence/src/test/resources</directory>
      </testResource>
      <testResource>
        <directory>game/game-core/src/test/resources</directory>
      </testResource>
      <testResource>
        <directory>game/game-net/src/test/resources</directory>
      </testResource>
    </testResources>

    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>

          <!-- Source Folders -->
          <execution>
            <id>add-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>

            <configuration>
              <sources>
                <source>base/src/main/java</source>
                <source>persistence/src/main/java</source>
                <source>game/game-core/src/main/java</source>
                <source>game/game-net/src/main/java</source>
              </sources>
            </configuration>
          </execution>

          <!-- Test Source Folders -->
          <execution>
            <id>add-test-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-test-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>base/src/test/java</source>
                <source>persistence/src/test/java</source>
                <source>game/game-core/src/test/java</source>
                <source>game/game-net/src/test/java</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- CheckStyle -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-eclipse-plugin</artifactId>
        <configuration>
          <additionalBuildcommands>
            <buildcommand>com.atlassw.tools.eclipse.checkstyle.CheckstyleBuilder</buildcommand>
          </additionalBuildcommands>
          <additionalProjectnatures>
            <projectnature>com.atlassw.tools.eclipse.checkstyle.CheckstyleNature</projectnature>
          </additionalProjectnatures>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
